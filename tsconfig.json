{
      "$schema": "https://json.schemastore.org/tsconfig",
      "display": "Node 14",
      "compilerOptions": {
            "allowSyntheticDefaultImports": true,
            "baseUrl": "src",
            "esModuleInterop": true,
            "forceConsistentCasingInFileNames": true,
            "lib": [
                  "es2020"
            ],
            "module": "commonjs",
            "skipLibCheck": true,
            "strict": true,
            "target": "es2020"
      },
      "include": [
            "stacks",
            "src"
      ]
}